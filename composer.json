{
    "name": "naixiaoxin/hyperf-ide-helper",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "Hyperf Ide Helper",
    "autoload": {
        "psr-4": {
            "Naixiaoxin\\HyperfIdeHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.4",
        "barryvdh/reflection-docblock": "^2.0",
        "hyperf/contract": "~1.1.0|^2.0",
        "hyperf/utils": "~1.1.0|^2.0",
        "doctrine/dbal": "^3.0",
        "composer/composer":"^1.9|^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpstan/phpstan": "^0.10.5",
        "hyperf/testing": "~1.1.0|^2.0",
        "swoft/swoole-ide-helper": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyze": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Naixiaoxin\\HyperfIdeHelper\\ConfigProvider"
        }
    }
}
